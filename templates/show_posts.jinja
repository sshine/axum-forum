{% extends "base" %}

{% block title %}Posts{% endblock %}

{% block content %}
    <h2>All Posts</h2>

    {% if posts %}
        <ul>
            {% for post in posts %}
                <li>
                    <a href="/post/{{ post.id }}">{{ post.author }}: {{ post.message[:50] }}...</a>
                    <small>(Posted on {{ post.created_at }})</small>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No posts available.</p>
    {% endif %}

    <a href="/post" class="button button-new">Create a new post</a>
{% endblock %}
